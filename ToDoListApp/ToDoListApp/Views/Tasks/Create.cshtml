@model TaskModel
<h4 class="fw-bold py-3 mb-4">Create a new Task</h4>

<!-- Basic Layout -->
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">

            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label" for="basic-default-fullname"></label>
                        <input asp-for="Title" class="form-control" id="basic-default-fullname" placeholder="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Description" class="form-label" for="basic-default-fullname"></label>
                        <input asp-for="Description" class="form-control" id="basic-default-fullname" placeholder="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Deadline" class="form-label" for="basic-default-fullname"></label>
                        <input asp-for="Deadline" type="date" class="form-control" id="basic-default-fullname" placeholder="Deadline" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>



                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

